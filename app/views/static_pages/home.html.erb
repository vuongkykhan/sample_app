<% provide :title, t(".home") %>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render t(".user_info") %>
      </section>
      <section class="stats">
        <%= render t(".follow_stats") %>
      </section>
      <section class="micropost_form">
        <%= render t(".micropost_form") %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".sample_app" %></h1>
    <h2>
      <%= t ".this_is" %>
      <%= link_to t(".rubyonrails"), t(".rubyonrails_link")  %>
      <%= t ".sample_application"  %>
    </h2>
    <%= link_to t(".sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag(t(".image"), alt: t(".logo")), t(".rubyonrails_link") %>
<% end %>
